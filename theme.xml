    <carouselViewName>Carrousel</carouselViewName>
    <carouselDetailsViewName>Carrousel + Aperçu</carouselDetailsViewName>    
    <blue>Bleu</blue>
    <red>Rouge</red>
    <green>Vert</green>    
    <none>Aucun</none>
    <subset.colorset>Jeux de couleurs</subset.colorset>
    <subset.shader>Effets TV</subset.shader>    
  </variables>

  <include subset="colorset" name="blue" displayName="${blue}">./art/colors/blue.xml</include>
  <include subset="colorset" name="red" displayName="${red}"/>
