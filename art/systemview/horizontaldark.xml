      <pos>0 0.3837</pos>
      <size>1 0.2325</size>
      <zIndex>20</zIndex>
      
      <logoSize>0.25 0.155</logoSize>
      <logoScale>1.2</logoScale>
      
      <logoSize>0.17 0.1</logoSize>
      <logoScale>1.6</logoScale>
    </carousel>

    <image name="logo">
      <path>./../logos/${system.theme}-w.svg</path>
    </image>

		<image name="logo" region="us">
			<path>./../logos/us/${system.theme}-w.svg</path>
		</image>
		
		<image name="logo" region="jp">
			<path>./../logos/jp/${system.theme}-w.svg</path>
