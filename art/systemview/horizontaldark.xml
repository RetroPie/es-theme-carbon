      <origin>0 0</origin>
      <pos>0 0.6101</pos>
      <size>1 0.005</size>
      <zIndex>45</zIndex>
    </image>

    <carousel name="systemcarousel" tinyScreen="true">
      <pos>0 0.35</pos>
      <size>1 0.60</size>
      <maxLogoCount>1</maxLogoCount>
      <logoSize>0.25 0.15</logoSize>
      <logoScale>2.6</logoScale>
      <logoPos>-1 0.1</logoPos>
    </carousel>
    <image name="carousel-inner" extra="true">
      <path>./../carousel.png</path>
      <color>FFFFFFFF</color>
      <origin>0 0</origin>
      <pos>0 0.3837</pos>
      <size>1 0.2325</size>
      <zIndex>40</zIndex>
    </image>
    <text name="systemInfo">
      <pos>0 0.64</pos>
      <size>1 0.25</size>
      <backgroundColor>00000000</backgroundColor>
      <color>${systemInfoColor}</color>
      <glowColor>${glowColor}</glowColor>
      <glowSize>2</glowSize>
            
     
        <glowSize>1</glowSize>
      
      <reflexion>0.20 0.0</reflexion>
